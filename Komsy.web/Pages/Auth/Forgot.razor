@page "/forgot-password"
@layout LogOutLayout

@inherits ForgotPage;

<MudContainer MaxWidth="MaxWidth.Small">
  <MudCard>
    <MudCardHeader class="justify-center">
      <MudIcon Icon="@Icons.Outlined.Lightbulb" Size="Size.Medium" Color="Color.Primary" />
      <MudText Align="Align.Center" Typo="Typo.h6">@Lang.GetText(TextEnum.ForgotPassword)</MudText>
    </MudCardHeader>
    <MudCardContent>

      <MudText Typo="Typo.body2">@Lang.GetText(TextEnum.EnterYourEmailAddressAndWeWillWendYouNewPassword)
      </MudText>

      <MudForm>
        <MudTextField Label="Email" @bind-Value="Email" />
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ForgotPassword" class="mt-4">
          @Lang.GetText(TextEnum.Send)</MudButton>
      </MudForm>
    </MudCardContent>
  </MudCard>

</MudContainer>
